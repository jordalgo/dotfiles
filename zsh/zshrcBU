# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="pure"
DEFAULT_USER="jordalgo"

# for teamcity pull request builds
function spghehook {
  curl --user $USER -X POST -d '{"name": "web","active": true,"events":["push","pull_request"],"config":{"url":"http://dev.jimw.cloud.spotify.net:5000/webhook","content_type":"json"}}' -H "Content-Type: application/json" https://ghe.spotify.net/api/v3/repos/$1/hooks
}

# General
alias pmd="~/bin/pmd/bin/run.sh"
alias c="clear"
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'

# Git
alias gitsuir="git submodule update --init --recursive"
alias gpsu='git push --set-upstream origin $(current_branch)'
alias gacane="git add -A && git commit --amend --no-edit"

# Spotify
alias spm="npm -reg http://npm-registry.spotify.net -userconfig ~/.spmrc --always-auth=true"
alias sudospm="sudo npm -reg http://npm-registry.spotify.net --always-auth=true --userconfig $HOME/.spmrc"
alias sshplay="ssh -A play.jordalgo.cloud.spotify.net"
alias cdsapps="cd ~/SpotifyDev/stitch-apps"
alias cdsframes="cd ~/SpotifyDev/stitch-frameworks"
alias spotify-local-dep=_spotify_local_dep
alias spotify-cc=clear-spotify-cache
alias spmrefresh="rm -rf node_modules/ && spm cache clean && spm install"

# Android
alias droid-blddiscover='./gradlew installDebug; adb shell am start -a android.intent.action.VIEW -d spotify:internal:discover com.spotify.mobile.android.ui.debug/com.spotify.mobile.android.ui.activity.MainActivity'
alias droid-bldradio='./gradlew installDebug; adb shell am start -a android.intent.action.VIEW -d spotify:internal:radio com.spotify.mobile.android.ui.debug/com.spotify.mobile.android.ui.activity.MainActivity'
alias driod-lint='./gradlew app:lint'
alias droid-test='./gradlew test'
alias droid-check='./gradlew app:lint test checkstyle robolectric:checkstyleTest'
alias droid-push=_droid_push
alias droid-test=_droid_test
alias adb="~/Android/sdk/platform-tools/adb"

